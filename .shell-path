# --------------------------------------------------------------------------
# ruby

if [[ -d "/usr/local/opt/rbenv/bin" ]] ; then
  export RBENV_ROOT="/usr/local/opt/rbenv"
elif [[ -e "$HOME/.rbenv/bin/rbenv" ]] ; then
  export RBENV_ROOT="$HOME/.rbenv"
fi
# --------------------------------------------------------------------------
_safe_add_to_path() {
  local _dir="$1"
  PATH="${PATH#$_dir:}"
  PATH="${PATH/:$_dir/}"
  [[ -d "$_dir" ]] && PATH="${_dir}:$PATH"
  export PATH
}

for dir in \
  /{bin,sbin} \
  /{usr,opt}/{bin,sbin} \
  /{usr,opt,Apps}/{local,X11,opt}/{bin,sbin} \
  /{usr,opt}/local/heroku/bin \
  /Applications/VMware\ Fusion.app/Contents/Library \
  /Applications/Postgres.app/Contents/Versions/9.4/bin \
  $HOME/bin \
  $HOME/.rbenv/bin \
  $HOME/.rvm/bin
do
  _safe_add_to_path "$dir"
done

# --------------------------------------------------------------------------
# ruby, prefer rvm over rbenv

if [[ -e "$HOME/.rvm/scripts/rvm" ]] ; then
  source "$HOME/.rvm/scripts/rvm"
elif [[ -e "$RBENV_ROOT/bin/rbenv" ]] ; then
  eval "$($RBENV_ROOT/bin/rbenv init -)"
fi

# --------------------------------------------------------------------------
# nodejs

if [[ -d "$HOME/.nvm" ]] ;then
  export NVM_DIR="$HOME/.nvm"
  if [[ -s "$NVM_DIR/nvm.sh" ]] ; then
    source "$NVM_DIR/nvm.sh"
  else
    command -v brew >/dev/null 2>/dev/null && source "$(brew --prefix nvm)/nvm.sh"
  fi
fi

# --------------------------------------------------------------------------
# GO

if [[ -d "$HOME/.go/bin" ]] ; then
  export GOPATH="$HOME/.go"
  _safe_add_to_path "$GOPATH/bin"
fi

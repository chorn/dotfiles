predate() {
  while read -r line ; do
    printf '%(%F %T)T %s\n' -1 "$line"
  done
}

total() {
  tr '\n' '+' | sed -e 's/^/(/' -e 's/\+$/\)/'  | bc -q
}

downloaded_in() {
  for f in "$@" ; do stat -r "$f" | awk '{print ($11 - $12) " seconds"}' ; done
}

ps_owners() {
  [[ -n "${BASH_VERSINFO[0]}" && "${BASH_VERSINFO[0]}" -lt 4 ]] && return 1

  local _pid="${1:-$$}"
  local _what_to_print="$2"

  [[ -z "$_what_to_print" ]] && _what_to_print="user"
  read -r _user _ppid _command < <(ps -o user,ppid,command -p "$_pid" | grep -v PPID)
  case "$_what_to_print" in
    pid) echo "$_pid" ;;
    command) echo "$_command" ;;
    *) echo "$_user" ;;
  esac
  [[ $_pid -ne 1 ]] && ps_owners "$_ppid" "$_what_to_print"
}

am_i_someone_else() {
  [[ -n "${BASH_VERSINFO[0]}" && "${BASH_VERSINFO[0]}" -lt 4 ]] && return 1

  local -a _owners
  local -A _counts

  while read -r _owner ; do

    if [[ -z "${_counts[$_owner]}" ]] ; then
      _owners+=($_owner)
      _counts[$_owner]=1
    else
      (( _counts[$_owner]++ ))
    fi
  done < <(ps_owners)

  if [[ "${#_owners[@]}" -le 2 && "${_owners[-1]}" == "root" ]] ; then
    return 1
  else
    return 0
  fi
}

# Ruby ---------------------------------------------------------------------
alias be="bundle exec"

httpd() {
  port="${1:-8000}"

  command -v open >/dev/null 2>/dev/null && (sleep 1 && open "http://127.0.0.1:$port" &)

  if command -v ruby >/dev/null 2>/dev/null ; then
    ruby -run -e httpd . -p "$port"
  elif command -v python  >/dev/null 2>/dev/null ; then
    python -m SimpleHTTPServer "$port"
  fi
}

[advice]
  statusHints = false
[branch]
  autoSetupRebase = always
[color]
  ui = true
[commit]
  gpgsign = true
  verbose = true
  verify = false
[core]
  editor = vim
  hooksPath=/dev/null
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
  algorithm = patience
  mnemonicprefix = true
  renames = true
[diff-so-fancy]
  first-run = false
  stripLeadingSymbols = false
  markEmptyLines = false
[merge]
  ff = only
  tool = vimdiff
[mergetool]
  keepBackup = true
  prompt = false
[prompt]
  showinfo = true
[pull]
  rebase = true
[push]
  default = tracking
[rebase]
  autoSquash = true
[rerere]
  enabled = true

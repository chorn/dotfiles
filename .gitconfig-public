; vim: ft=gitconfig sw=2 ts=2 et

[advice]
  statusHints = false
[branch]
  autoSetupRebase = always
[color]
  ui = true
[commit]
  gpgsign = true
  verbose = true
  verify = false
[core]
  editor = vim
  pager = delta
[delta]
  side-by-side = true
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[diff]
  algorithm = patience
  mnemonicprefix = true
  renames = true
  colorMoved = default
[diff-so-fancy]
  first-run = false
  stripLeadingSymbols = false
  markEmptyLines = false
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[merge]
  ff = only
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = true
  prompt = false
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[prompt]
  showinfo = true
[pull]
  rebase = true
[push]
  default = tracking
  autoSetupRemote = true
[rebase]
  autoSquash = true
  autoStash = true
[rerere]
  enabled = true
[tag]
  gpgsign = true
